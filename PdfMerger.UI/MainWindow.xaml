<Window x:Class="PdfMerger.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfMerger.UI"
        xmlns:vm="clr-namespace:PdfMerger.UI.ViewModels"
        xmlns:views="clr-namespace:PdfMerger.UI.Views"
        
        
        mc:Ignorable="d"
        Title="PdfMerger" Height="500" Width="800" Icon="/images/AppLogo.png"

        WindowStartupLocation="CenterScreen">
    <Grid Background="WhiteSmoke">
        <ContentControl Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type vm:EditPdfViewModel}">
                    <views:EditPdfView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:MergePdfViewModel}">
                    <views:MergePdfView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:SplitPdfViewModel}">
                    <views:SplitPdfView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:SelectionViewModel}">
                    <views:SelectionView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>


</Window>
